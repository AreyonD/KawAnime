{
  "name": "KawAnime",
  "version": "0.2.0",
  "description": "A Software for Otaku Community.",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "hotDev": "cross-env NODE_ENV=hotDevelopment electron .",
    "pack": "build --dir",
    "dist": "build -mwl",
    "helpBuild": "echo 'https://github.com/electron-userland/electron-builder#cli-usage'"
  },
  "repository": "https://github.com/Kylart/KawAnime",
  "keywords": [
    "Torrent",
    "KawAnime",
    "Otaku",
    "Anime"
  ],
  "author": "Kylart",
  "license": "MIT",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.6.2",
    "electron-builder": "^15.6.2",
    "electron-reload": "^1.1.0",
    "vue-devtools": "^3.0.8"
  },
  "dependencies": {
    "cross-env": "^4.0.0",
    "find-remove": "^1.0.0",
    "is-online": "^5.2.0",
    "mal-scraper": "^1.2.2",
    "malapi": "0.0.3",
    "material-design-lite": "^1.3.0",
    "mdi": "^1.8.36",
    "node-nyaa-api": "latest",
    "parse-torrent": "^5.8.1",
    "play-sound": "^1.1.1",
    "request": "latest",
    "vue-material": "^0.7.1"
  },
  "build": {
    "appId": "KawAnime",
    "dmg": {
      "contents": [
        {
          "x": 150,
          "y": 90
        },
        {
          "x": 150,
          "y": 275,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "postinstall": "install-app-deps"
}
